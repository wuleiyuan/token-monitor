#!/usr/bin/env python3
"""
环境变量配置模板
复制此文件为 .env 并填入实际的API密钥
"""

# Google API 密钥配置
GOOGLE_PAID_API_KEY=your_paid_api_key_here
GOOGLE_FREE_API_KEYS=your_free_api_key1,your_free_api_key2,your_free_api_key3

# 数据库配置
DATABASE_PATH=token_usage.db
DATABASE_BACKUP_ENABLED=true
DATABASE_BACKUP_INTERVAL_HOURS=24

# 服务器配置
API_PORT=5000
API_HOST=127.0.0.1
API_MAX_CONNECTIONS=100
API_REQUEST_TIMEOUT_SECONDS=30

# 安全配置
SECURITY_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
SECURITY_REQUIRE_AUTH=false
SECURITY_AUTH_TOKEN=your_auth_token_here

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=token_monitor.log
LOG_MAX_FILE_SIZE_MB=10

# 成本计算
COST_DEFAULT_CURRENCY=CNY
COST_PRECISION=4

# 模型配置
MODELS_PAID_PROVIDERS=anthropic,openai,cohere
MODELS_PAID_MODELS=gemini-3-pro
MODELS_FREE_RATE_LIMIT_MODELS=gemini-2.5-pro,gemini-2.5-flash,gemini-2.0-flash

# 数据保留
DATA_RETENTION_DAYS_TO_KEEP=365
DATA_RETENTION_CLEANUP_INTERVAL_HOURS=24